{
  "manifest_version": 3,
  "name": "CRANQ-Plus",
  "version": "0.3.0",
  "description": "AI replies for X/Twitter",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": { "service_worker": "service_worker.js" },
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "16": "icons/icon16.png", "128": "icons/icon128.png" }
}
